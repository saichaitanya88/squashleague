<script src="/assets/admin.js" type="text/javascript"></script>





<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Manage Players</h3>
    <br/>
		<i>This is used to manage players.
		<br/>
		Page loads list of players. User selects the player to modify. 
		<br/>
		Javascript populates user information into the form. User makes the modification and POSTS update.
		</i>
  </div>
  <div class="panel-body">
    <div class="row">
			<div class="col-md-2">
				<ul class="nav nav-pills nav-stacked">
				<% @players.each do |player| %>
					<li>
						<a href="#" onclick="retrieve_player('<%= player.id %>')"><%= player.first_name + " " + player.last_name %></a>
					</li>
				<% end %>
				</ul>
			</div>
			<div class="col-md-10">
				<%= form_for(:player, :url => url_for(:action => "manage_player"), :html => {:class => "form-horizontal"}) do |f| %>

					<%= f.hidden_field :id %>

					<div class="form-group">
						<label class="control-label col-md-1">First Name</label>
						<div class="col-md-6">
							<%= f.text_field(:first_name, :class=>"form-control") %>
						</div>
					</div>
	
					<div class="form-group">
						<label class="control-label col-md-1">Last Name</label>
						<div class="col-md-6">
							<%= f.text_field(:last_name, :class=>"form-control") %>
						</div>
					</div>
	
					<div class="form-group">
						<div class="col-md-offset-1 col-md-1">
							<%= f.submit "Update", class: "btn btn-large btn-default" %>	
						</div>
					</div>
					
				<% end %>
			</div>
		</div>
  </div>
</div>




