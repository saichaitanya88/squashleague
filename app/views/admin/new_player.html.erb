

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Create New Player</h3>
    <i>This is used to create a new player. Rule: No duplicate players. (ie, fname, lname have to be unique)</i>
  </div>
  <div class="panel-body">
		<div class="row">
			<div class="">
				<%= form_for(:player, :url => url_for(:action => "create_player"), :html => {:class => "form-horizontal"}) do |f| %>

					<div class="form-group">
						<label class="control-label col-md-2">First Name</label>
						<div class="col-md-6">
							<%= f.text_field(:first_name , :class => "form-control") %>
						</div>
					</div>
		
					<div class="form-group">
						<label class="control-label col-md-2">Last Name</label>
						<div class="col-md-6">
							<%= f.text_field(:last_name , :class => "form-control") %>
						</div>
					</div>
		
					<div class="form-group">
						<div class="col-md-offset-2 col-md-1">
							<%= f.submit "Create", class: "btn btn-large btn-default" %>	
						</div>
					</div>
				  
				  
				<% end %>
			</div>
		</div>
  </div>
</div>
