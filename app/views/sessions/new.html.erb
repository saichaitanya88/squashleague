<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
		<%= form_for(:session, :url => url_for(:action => 'create'), :html => {:class => "form-horizontal"}) do |f| %>

			<div class="form-group">
				<label class="control-label col-md-1">Email</label>
				<div class="col-md-6">
					<%= f.text_field :email %>
				</div>
			</div>    
  
			<div class="form-group">
				<label class="control-label col-md-1">Password</label>
				<div class="col-md-6">
					<%= f.password_field :password %>
				</div>
			</div>
		
			<div class="form-group">
				<div class="col-md-offset-1 col-md-1">
					<%= f.submit "Sign in", class: "btn btn-large btn-default" %>	
				</div>
			</div>
      
      
    <% end %>

  </div>
</div>
